const http = require('http')

var parties = [{partyname:"Anonymous Party", tickets:[{public:"GCIUHGYTRIT6BSK3KOBOLRCFVIWMYXSS27CA6A3MQNQBM4LOZFTERDQ2"}, 
                                                      {public:"GCIUHGYTRIT6BSK3KOBOLRCFVIWMYXSS27CA6A3MQNQBM4LOZFTERDQ1", used:true, usedtime:1234567890}
						     ]}]

function readticket( req,res ){

    let chuck = ''
    
    req.on('data', (chunk) => {
      chuck +=  chunk.toString();
    })

    req.on('end', () => {
    
         try{
              // {"ticket":{"public":"GCIUHGYTRIT6BSK3KOBOLRCFVIWMYXSS27CA6A3MQNQBM4LOZFTERDQ2"}}
              let json = JSON.parse(chuck)
              let partyfound = false
              let partyname = null
              let ticketok = false
              let info = ""
              parties.forEach((item, index)=>{
                  
                  if(!partyfound)
                  item.tickets.forEach((ticket, tindex)=>{
                        if(ticket.public==json.ticket.public){
                          partyfound = true;
                          partyname = item.partyname
                          
                          if(ticket.used!=null || ticket.used){
                          
                            ticketok = false
                            info = "Ticket is used"
                            return false;
                          } else {
                            
                            ticketok = true;
                            parties[index].tickets[tindex].used = true
                            parties[index].tickets[tindex].usedtime = Date.now()
                            info = "Ticket OK"
                            return false;
                          }
                        
                        }
                      
                  })
                
              })
              
              if(!partyfound) {
                res.end(JSON.stringify({ticket:{result:false, info:"Party mistake", partyname:partyname}}))
                return;
              }
              
              if(!ticketok) res.end(JSON.stringify({ticket:{result:false, info:info, partyname:partyname}})); 
              else res.end(JSON.stringify({ticket:{result:true, info:info, partyname:partyname}}));
              
         
         } catch(err){
         
              res.end(JSON.stringify({ticket:{result:false, info:"Wrong request"}}));
              console.log(err);
         }
    })

}

const proxy = http.createServer((req, res) => {
    
      if(req.method=="POST") {
        
        readticket(req, res)
        
      }
})

proxy.listen(9997, (error) => {
  if(!error) console.log("Server started"); else 
	console.log(error)
})
